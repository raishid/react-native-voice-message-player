{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "jsxImportSource": "react",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "types": ["react", "react-native", "node"],
    "baseUrl": "./",
    "paths": {
      "@types": ["./src/types.d.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
